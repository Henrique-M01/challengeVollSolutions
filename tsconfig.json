{
  "compilerOptions": {
    "target": "es5",  
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "*": [
          "node_modules/*",
          "src/types/*"
      ],
    }
  },
  "include": ["src/**/*"],
}
